@model ClinicaCaniZzoo.Models.Hospitalizations

@{
    ViewBag.Title = "Create";
}

<h2>Aggiungi un nuovo ricovero</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(model => model.IdAnimale, htmlAttributes: new { @class = "control-label" })
                @Html.DropDownList("IdAnimale", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IdAnimale, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.StatoRicovero, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.StatoRicovero, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.StatoRicovero, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.FotoAnimale, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.FotoAnimale, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FotoAnimale, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
