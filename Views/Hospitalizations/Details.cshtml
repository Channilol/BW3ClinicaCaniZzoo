@model ClinicaCaniZzoo.Models.Hospitalizations

@{
    ViewBag.Title = "Dettaglio ricovero";
}

<h2>Dettaglio ricovero</h2>

<div class="card">
    <div class="row no-gutters">
        <div class="col-md-4">
            <img src="@Model.FotoAnimale" class="card-img" alt="Animal Image" style="width: 300px; max-height: 100%;">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <dl class="dl-horizontal">
                    <dt>Nome animale:</dt>
                    <dd>@Html.DisplayFor(model => model.Animals.Nome)</dd>

                    <dt>Stato ricovero:</dt>
                    <dd>@Html.DisplayFor(model => model.StatoRicovero)</dd>
                </dl>
            </div>
            <div class="card-body">
                @Html.ActionLink("Edit", "Edit", new { id = Model.IdRicovero }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
            </div>
        </div>
    </div>
</div>
