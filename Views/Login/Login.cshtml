@model ClinicaCaniZzoo.Models.Users
@{
    ViewBag.Title = "Login";
}

<h2 class="text-center">Login</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken();
    <div class="container d-flex align-content-center align-items-center flex-column">
        <div class="form-group text-white text-center mb-3">
            @Html.LabelFor(model => model.Email, "E-mail: ")
            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "E-mail" })
            @Html.ValidationMessageFor(model => model.Email)
        </div>
        <div class="form-group text-white text-center mb-3">
            @Html.LabelFor(model => model.Password, "Password: ")
            @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "Password" })
            @Html.ValidationMessageFor(model => model.Password)
        </div>
        <button class="btn btn-primary text-white">Login</button>
    </div>
}

