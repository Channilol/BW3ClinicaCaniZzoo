@model ClinicaCaniZzoo.Models.Visits

@{
    ViewBag.Title = "Details";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Dettagli visita</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Nome animale:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Animals.Nome)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Data):
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Data)
            </dd>
            <dt>
                Obiettivo esame:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.EsameObiettivo)
            </dd>
            <dt>
                Descrizione cura:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.DescrizioneCura)
            </dd>
            <dt>
                Prezzo cura:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Prezzo)
            </dd>
        </dl>
    </div>
    <div class="card-footer">
        <button type="button" class="btn btn-warning text-white" onclick="location.href='@Url.Action("Edit", new { id = Model.IdVisita })'">Edit</button>
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
    </div>
</div>
